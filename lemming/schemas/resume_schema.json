{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "LeMMing Agent Resume",
  "type": "object",
  "required": [
    "name",
    "title",
    "short_description",
    "model",
    "permissions",
    "schedule",
    "instructions"
  ],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9_]*$",
      "description": "Unique identifier matching folder name"
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "short_description": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200
    },
    "workflow_description": {
      "type": "string"
    },
    "model": {
      "type": "object",
      "required": ["key"],
      "properties": {
        "key": {"type": "string"},
        "temperature": {"type": "number", "minimum": 0, "maximum": 2},
        "max_tokens": {"type": "integer", "minimum": 1}
      }
    },
    "permissions": {
      "type": "object",
      "required": ["read_outboxes", "tools"],
      "properties": {
        "read_outboxes": {
          "type": "array",
          "items": {"type": "string"}
        },
        "tools": {
          "type": "array",
          "items": {"type": "string"}
        }
      }
    },
    "schedule": {
      "type": "object",
      "required": ["run_every_n_ticks", "phase_offset"],
      "properties": {
        "run_every_n_ticks": {"type": "integer", "minimum": 1},
        "phase_offset": {"type": "integer", "minimum": 0}
      }
    },
    "instructions": {
      "type": "string",
      "minLength": 1
    },
    "credits": {
      "type": "object",
      "required": ["max_credits", "soft_cap"],
      "properties": {
        "max_credits": {"type": "number"},
        "soft_cap": {"type": "number"}
      }
    }
  }
}
